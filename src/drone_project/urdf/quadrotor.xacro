<?xml version="1.0"?>
<robot name="quadrotor" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ========================================= -->
  <!-- PROPERTIES (Thông số chung)               -->
  <!-- ========================================= -->
  <xacro:property name="body_mass" value="1.5"/>
  <xacro:property name="body_length" value="0.3"/>
  <xacro:property name="body_width" value="0.3"/>
  <xacro:property name="body_height" value="0.1"/>
  
  <xacro:property name="rotor_mass" value="0.05"/>
  <xacro:property name="rotor_radius" value="0.1"/>
  <xacro:property name="rotor_offset_x" value="0.15"/>
  <xacro:property name="rotor_offset_y" value="0.15"/>
  <xacro:property name="rotor_offset_z" value="0.05"/>

  <!-- ========================================= -->
  <!-- MACROS (Tái sử dụng code)                 -->
  <!-- ========================================= -->
  
  <!-- Macro cho rotor -->
  <xacro:macro name="rotor" params="name parent x y z color">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder length="0.01" radius="${rotor_radius}"/>
        </geometry>
        <material name="${color}">
          <color rgba="${color} 1"/>
        </material>
      </visual>
      
      <collision>
        <geometry>
          <cylinder length="0.01" radius="${rotor_radius}"/>
        </geometry>
      </collision>
      
      <inertial>
        <mass value="${rotor_mass}"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>
    
    <joint name="${name}_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${name}"/>
      <origin xyz="${x} ${y} ${z}" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>
    
    <!-- Gazebo color -->
    <gazebo reference="${name}">
      <material>Gazebo/${color}</material>
    </gazebo>
  </xacro:macro>

  <!-- ========================================= -->
  <!-- BASE LINK                                 -->
  <!-- ========================================= -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="${body_length} ${body_width} ${body_height}"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    
    <collision>
      <geometry>
        <box size="${body_length} ${body_width} ${body_height}"/>
      </geometry>
    </collision>
    
    <inertial>
      <mass value="${body_mass}"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02"/>
    </inertial>
  </link>
  
  <gazebo reference="base_link">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- ========================================= -->
  <!-- ROTORS (Sử dụng macro)                    -->
  <!-- ========================================= -->
  <xacro:rotor name="rotor_front_left"  parent="base_link" 
               x="${rotor_offset_x}"  y="${rotor_offset_y}"  z="${rotor_offset_z}" 
               color="1 0 0"/>
               
  <xacro:rotor name="rotor_front_right" parent="base_link" 
               x="${rotor_offset_x}"  y="${-rotor_offset_y}" z="${rotor_offset_z}" 
               color="0 0 1"/>
               
  <xacro:rotor name="rotor_rear_left"   parent="base_link" 
               x="${-rotor_offset_x}" y="${rotor_offset_y}"  z="${rotor_offset_z}" 
               color="0 0 1"/>
               
  <xacro:rotor name="rotor_rear_right"  parent="base_link" 
               x="${-rotor_offset_x}" y="${-rotor_offset_y}" z="${rotor_offset_z}" 
               color="1 0 0"/>

  <!-- ========================================= -->
  <!-- SENSORS (Camera, IMU)                     -->
  <!-- ========================================= -->
  
  <!-- Camera Link -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.02 0.05 0.02"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    
    <collision>
      <geometry>
        <box size="0.02 0.05 0.02"/>
      </geometry>
    </collision>
    
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>
  
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.15 0 0" rpy="0 0 0"/>
  </joint>
  
  <!-- Camera Plugin -->
  <gazebo reference="camera_link">
    <sensor type="camera" name="camera1">
      <update_rate>30.0</update_rate>
      <camera name="head">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>quadrotor/camera</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>camera_link</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <!-- ========================================= -->
  <!-- GAZEBO PLUGINS                            -->
  <!-- ========================================= -->
  
  <!-- Hector Quadrotor Plugin -->
  <gazebo>
    <plugin name="quadrotor_simple_controller" filename="libhector_gazebo_quadrotor_simple_controller.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>100.0</updateRate>
      <bodyName>base_link</bodyName>
      <topicName>cmd_vel</topicName>
      <velocityTopicName>cmd_vel</velocityTopicName>
      <imuTopic>imu</imuTopic>
      <stateTopic>ground_truth/state</stateTopic>
      <maxForce>30</maxForce>
    </plugin>
  </gazebo>
  
  <!-- IMU Plugin -->
  <gazebo>
    <plugin name="quadrotor_imu_sim" filename="libhector_gazebo_ros_imu.so">
      <updateRate>100.0</updateRate>
      <bodyName>base_link</bodyName>
      <topicName>imu</topicName>
      <accelDrift>0.0 0.0 0.0</accelDrift>
      <accelGaussianNoise>0.0 0.0 0.0</accelGaussianNoise>
      <rateDrift>0.0 0.0 0.0</rateDrift>
      <rateGaussianNoise>0.0 0.0 0.0</rateGaussianNoise>
    </plugin>
  </gazebo>

</robot>
